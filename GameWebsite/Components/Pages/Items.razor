@page "/items"
@using GameWebsite.Data
@using GameWebsite.Models
@inject NavigationManager NavManager

<div class="items-grid">
    <div class="category">
        <h4>Weapons</h4>
        <div class="items-container">
            @foreach (var weapon in GameData.weapons.Values)
            {
                <!-- Creates clickable cards for each weapon in the weapons collection -->
                <a href="/itemdetails/@weapon.Id" class="item-card">
                    <img src="Images/Items/Filler.jpg" alt="@weapon.Name" class="item-image" />
                    <p>@weapon.Name</p>
                </a>
            }
        </div>
    </div>

    <div class="category">
        <h4>Potions</h4>
        <div class="items-container">
            @foreach (var potion in GameData.potions.Values)
            {
                <!-- Creates clickable cards for each potion in the potions collection -->
                <a href="/itemdetails/@potion.Id" class="item-card">
                    <img src="Images/Items/Filler.jpg" alt="@potion.Name" class="item-image" />
                    <p>@potion.Name</p>
                </a>
            }
        </div>
    </div>
</div>

<style>
    /* Styles for arranging items grid */
    .items-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        flex-direction: column; /* Ensures categories stack properly */
    }

    /* Styles for individual categories */
    .category {
        width: 100%;
    }

    /* Styles for arranging item cards within categories */
    .items-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px; /* Adjust spacing between items */
    }

    /* Styles for item cards */
    .item-card {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: center;
        width: 150px;
    }

        /* Hover effect for item cards */
        .item-card:hover {
            background-color: #f0f0f0;
        }

    /* Styles for item images */
    .item-image {
        width: 100px;
        height: 100px;
    }

    /* Ensures links are styled properly */
    a {
        text-decoration: none;
        color: inherit;
    }
</style>
