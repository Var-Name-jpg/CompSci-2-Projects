@page "/player-selection"
@using BuchananWar
@using BuchananWar.Models

@inject NavigationManager NavigationManager

<PageTitle>Select Number of Players</PageTitle>

<h1 class="text-center">Select Number of Players</h1>

<div class="nav-buttons">
    <button class="btn btn-primary btn-lg" @onclick="() => StartGame(2)">2 Players</button>
    <button class="btn btn-primary btn-lg" @onclick="() => StartGame(3)">3 Players</button>
    <button class="btn btn-primary btn-lg" @onclick="() => StartGame(4)">4 Players</button>
</div>

<style>

    .nav-buttons {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        margin-top: 50px;
    }

    .nav-buttons .btn {
        width: 250px;
        padding: 15px 30px;
        font-size: 1.5rem;
        text-align: center;
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
    }

    .nav-buttons .btn:hover {
        transform: scale(1.1);
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }

</style>

@code {
    private void StartGame(int numberOfPlayers)
    {
        // Store the number of players and navigate to the game page
        NavigationManager.NavigateTo($"/play-game/{numberOfPlayers}");
    }
}
